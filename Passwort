function Button()
while true do 
  local SideOut = "bottom"
  local Password = "555"
  local OpenTime = 10
  local Input = read("*")
  if Input == Password then
    term.setCursorPos(1,2)
    write("Passwort aktzeptiert")
    rs.setOutput(SideOut, true)
    sleep(OpenTime)
    rs.setOutput(SideOut, false)
    term.clear()
    term.setCursorPos(1,1)
    print("Bitte Passwort eingeben:")
  else
    term.setCursorPos(1,2)
    write("Passwort falsch")
    sleep(1)
    term.clear()
    term.setCursorPos(1,1)
    print("Bitte Passwort eingeben:")
end
end
end

function Redstone()
while true do 
local SideIn = "back"
local SideOut = "bottom"
local OpenTime = 10
os.pullEvent("redstone")
if rs.getInput(SideIn) == true then
 rs.setOutput(SideOut,true)
 sleep(OpenTime)
 rs.setOutput(SideOut, false)
 end
 end
 end
 

while true do 
 parallel.waitForAll(Button, Redstone)
end
  

